{
  "compilerOptions": {
    "composite": true, // Для project references (обязательно для ссылок)
    "skipLibCheck": true, // Пропуск проверки типов node_modules
    "module": "ESNext", // Совместимо с Vite
    "moduleResolution": "bundler", // Для корректного разрешения модулей в Vite
    "allowSyntheticDefaultImports": true // Чтобы не было ошибок при импорте CommonJS модулей
  },
  "include": ["vite.config.ts"] // Проверяет только конфиг
}

